<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".application.partyGrid.PartyGridFragment">

    <LinearLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline34"
        android:background="@color/cardview_dark_background">

        <LinearLayout
            android:id="@+id/frontLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <FrameLayout
                android:paddingVertical="@dimen/partyGrid_verticalPadding"
                android:paddingHorizontal="@dimen/partyGrid_horizontalPadding"
                android:id="@+id/upLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DBDBDC"
                android:orientation="horizontal">

                <fragment
                    android:id="@+id/upLeftFragment"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:name="com.example.simplerpg.application.partyGrid.HeroFragment" />

            </FrameLayout>

            <FrameLayout
                android:paddingVertical="@dimen/partyGrid_verticalPadding"
                android:paddingHorizontal="@dimen/partyGrid_horizontalPadding"
                android:id="@+id/upCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EAEAEB"
                android:orientation="horizontal">

                <fragment
                    android:id="@+id/upCenterFragment"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:name="com.example.simplerpg.application.partyGrid.HeroFragment" />

            </FrameLayout>

            <FrameLayout
                android:paddingVertical="@dimen/partyGrid_verticalPadding"
                android:paddingHorizontal="@dimen/partyGrid_horizontalPadding"
                android:id="@+id/upRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DBDBDC"
                android:orientation="horizontal">

                <fragment
                    android:id="@+id/upRightFragment"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:name="com.example.simplerpg.application.partyGrid.HeroFragment" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/backline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <FrameLayout
                android:paddingVertical="@dimen/partyGrid_verticalPadding"
                android:paddingHorizontal="@dimen/partyGrid_horizontalPadding"
                android:id="@+id/downLeft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EAEAEB"
                android:orientation="horizontal">

                <fragment
                    android:id="@+id/downLeftFragment"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:name="com.example.simplerpg.application.partyGrid.HeroFragment" />

            </FrameLayout>

            <FrameLayout
                android:paddingVertical="@dimen/partyGrid_verticalPadding"
                android:paddingHorizontal="@dimen/partyGrid_horizontalPadding"
                android:id="@+id/downCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#DBDBDC"
                android:orientation="horizontal">

                <fragment
                    android:id="@+id/downCenterFragment"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:name="com.example.simplerpg.application.partyGrid.HeroFragment" />

            </FrameLayout>

            <FrameLayout
                android:paddingVertical="@dimen/partyGrid_verticalPadding"
                android:paddingHorizontal="@dimen/partyGrid_horizontalPadding"
                android:id="@+id/downRight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#EAEAEB"
                android:orientation="horizontal">

                <fragment
                    android:id="@+id/downRightFragment"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:name="com.example.simplerpg.application.partyGrid.HeroFragment" />

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>