<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".application.party.partyEdition.heroProfile.heroAbilities.AbilityDescriptionDialogFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/ability_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Absorb"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/ability_name" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ability_closeButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_weight="0"
            tools:src="@android:drawable/ic_menu_close_clear_cancel">

        </androidx.appcompat.widget.AppCompatImageButton>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ability_type"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/ability_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Special"
                    android:textSize="20sp"
                    android:layout_marginEnd="10dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ability_power"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/ability_power"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="70"
                    android:textSize="20sp"
                    android:layout_marginEnd="10dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/ability_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A nutrient-draining attack. The userâ€™s HP is restored by half the damage taken by the target."
                android:textSize="17sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/ability_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="0"
            android:src="@drawable/icon143" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>